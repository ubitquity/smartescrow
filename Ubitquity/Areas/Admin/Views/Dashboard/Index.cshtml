@{ Layout = "~/Views/Shared/Admin_Layout.cshtml"; }


<!-- Page content-->
<div class="page-content">
    <div class="page-header">
        <h1 class="page-title f-bold"><i class="ubi-icondashboard title-icon"></i>Dashboard</h1>
    </div>
    <div class="dashboard-content">
        <div class="row">
            <div class="col-xl-9">
                <div class="row">
                    <div class="col-md-4 ">
                        <div class=" deals-card dashboard-widget">
                            <div class="row">
                                <div class="col-6">
                                    <div class="deals-card-txt ">
                                        <h5 class="f-bold">Total Deals</h5>
                                        <span class="deal-numbers f-bold">2934</span>
                                    </div>
                                </div>
                                <div class="col-6 text-end">
                                    <div class="deals-card-stats">
                                        <img src="~/assets/images/total-deals.png" class="img-fluid">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 ">
                        <div class=" deals-card dashboard-widget">
                            <div class="row">
                                <div class="col-6">
                                    <div class="deals-card-txt ">
                                        <h5 class="f-bold">Deals Completed</h5>
                                        <span class="deal-numbers f-bold">1546</span>
                                    </div>
                                </div>
                                <div class="col-6 text-end">
                                    <div class="deals-card-stats">
                                        <img src="~/assets/images/deals-comp.png" class="img-fluid">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 ">
                        <div class=" deals-card dashboard-widget">
                            <div class="row">
                                <div class="col-6">
                                    <div class="deals-card-txt ">
                                        <h5 class="f-bold">Deals Rejected</h5>
                                        <span class="deal-numbers f-bold">940</span>
                                    </div>
                                </div>
                                <div class="col-6 text-end">
                                    <div class="deals-card-stats">
                                        <img src="~/assets/images/deals-rej.png" class="img-fluid">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="total-revenue-stats dashboard-widget">
                            <div class="stats-header">
                                <div class="total-revenue--stats-title">
                                    <div>
                                        <h4 class="f-bold">Total Revenue</h4>
                                        <span class="deal-numbers total-revenue-numbers f-bold">$347536</span>
                                    </div>
                                    <div class="stats--status">
                                        <i class="ubi-iconstats-up"></i>
                                        <span class="stats--status-per">11%</span>
                                        <span class="stats--status-duration">Last Month</span>
                                    </div>
                                </div>
                                <div class="stats-duration-tabs">
                                    <ul class="nav nav-pills " id="pills-tab" role="tablist">
                                        <li class="nav-item " role="presentation">
                                            <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Monthly</button>
                                        </li>
                                        <li class="nav-item" role="presentation">
                                            <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Daily</button>
                                        </li>
                                        <li class="nav-item pr-0" role="presentation">
                                            <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Today</button>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="total-revenue-stats--graph">
                                <div class="tab-content" id="pills-tabContent">
                                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                                        <div class="t-r-stats-graph">
                                            <img src="~/assets/images/stat.JPG" class="img-fluid">
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                                        <div class="t-r-stats-graph">
                                            <img src="~/assets/images/stat.JPG" class="img-fluid">
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
                                        <div class="t-r-stats-graph">
                                            <img src="~/assets/images/stat.JPG" class="img-fluid">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 ">
                <div class="card overview-users-card dashboard-widget">
                    <h4 class="f-bold">Overview Users</h4>
                    <div class="overview-users-stats">
                        <div class="overview-users-graph text-center">
                            <img src="~/assets/images/useroview.jpg" class="text-center img-fluid">
                        </div>
                    </div>
                    <div class="users-overview-stats">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <p class="s-txt mb-0"> <img src="~/assets/images/Admin-stats.png" class="img-fluid"> Admin</p>
                                <span class="s-txt f-bold">23</span>
                            </li>
                            <li class="list-group-item">
                                <p class="s-txt mb-0"> <img src="~/assets/images/Counterparties-stats.png" class="img-fluid"> Admin</p>
                                <span class="s-txt f-bold">23</span>
                            </li>
                            <li class="list-group-item">
                                <p class="s-txt mb-0"> <img src="~/assets/images/Agents-stats.png" class="img-fluid"> Admin</p>
                                <span class="s-txt f-bold">23</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-9">
                <div class="overview-deals-section dashboard-widget">
                    <h4 class="f-bold">Overview Deals</h4>
                    <div class="overview-deals-inner">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="overviewdeals-stats-card d-flex">
                                    <i class="ubi-iconbuilding-1 deals-sub-icon"></i>
                                    <div>
                                        <p>No of Deals Submitted</p>
                                        <span class="deals-sub-number f-bold">3,336</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="overviewdeals-stats-card d-flex">
                                    <i class="ubi-iconbuilding-1 deals-appr-icon"></i>
                                    <div>
                                        <p>No of Deals Submitted</p>
                                        <span class="deals-sub-number f-bold">3,336</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 text-end">
                                <div class="stats--status">
                                    <i class="ubi-iconstats-up"></i>
                                    <span class="stats--status-per">11%</span>
                                    <span class="stats--status-duration">Last Year</span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="overview-deals-graph">
                                    <img src="~/assets/images/overview-graph.JPG" class="img-fluid">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3">
                <div class="card current-week-stats dashboard-widget">
                    <h4 class="f-bold">Current Week Status</h4>
                    <div class="stat-bars">
                        <div class="d-submited-bar bar--sec">
                            <div class="bars-txt">
                                <label class="f-bold">Deals Submitted</label><span class="s-txt">1750</span>
                            </div>
                            <div class="progress ">
                                <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="d-completed-bar bar--sec">
                            <div class="bars-txt">
                                <label class="f-bold">Deals Completed</label><span class="s-txt">1750</span>
                            </div>
                            <div class="progress ">
                                <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="d-progress-bar bar--sec">
                            <div class="bars-txt">
                                <label class="f-bold">Deals In Process</label><span class="s-txt">1750</span>
                            </div>
                            <div class="progress ">
                                <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="d-rejectd-bar bar--sec">
                            <div class="bars-txt">
                                <label class="f-bold">Deals Rejected</label><span class="s-txt">1750</span>
                            </div>
                            <div class="progress ">
                                <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="d-rcvd-bar bar--sec">
                            <div class="bars-txt">
                                <label class="f-bold">$ Received</label><span class="s-txt">$478,356.00</span>
                            </div>
                            <div class="progress ">
                                <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="d-transferred-bar bar--sec">
                            <div class="bars-txt">
                                <label class="f-bold">$ Transferred</label><span class="s-txt">$437,159.00</span>
                            </div>
                            <div class="progress ">
                                <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="d-fee-bar bar--sec">
                            <div class="bars-txt">
                                <label class="f-bold">$ Our Fee</label><span class="s-txt">$41,197.00</span>
                            </div>
                            <div class="progress ">
                                <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>